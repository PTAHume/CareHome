@model CareHome.Models.CareHomes

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Care Homes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AddressDetailsId" />
            @await Html.PartialAsync("../AddressDetails/Create.cshtml", Model.AddressDetails)
            <input type="hidden" asp-for="ContactDetailsId" />
            @await Html.PartialAsync("../ContactDetails/Create.cshtml", Model.ContactInfo)
            <div class="form-group">
                <p></p>
                <input type="submit" value="Create" class="btn btn-primary" /> |  <a class="btn btn-warning" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
